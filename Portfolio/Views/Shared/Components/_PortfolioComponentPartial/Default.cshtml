@model List<Portfolio.DAL.Entities.MyPortfolio>

<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolio</h3>
            <h1>See My Latest Projects.</h1>

            <p class="lead">Welcome to my portfolio! Here you'll find a selection of my latest projects, showcasing my skills and passion for web development. From innovative web applications to dynamic databases, each project demonstrates my ability to create efficient and user-friendly solutions. Dive in to explore the details and see the results of my hard work and dedication.</p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
            @foreach (var item in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">
                        <div class="item-folio__thumb">
                            <a href="~/hola-master/images/portfolio/@item.ImgUrl" class="thumb-link" title="@item.Title" data-size="1250x700">
                                <img src="~/hola-master/images/portfolio/@item.ImgUrl"
                                     srcset="~/hola-master/images/portfolio/@item.ImgUrl 1x, ~/hola-master/images/portfolio/@item.ImgUrl.2x.jpg 2x" alt="@item.Title">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.Title
                            </h3>
                            <p class="item-folio__cat">
                                @item.SubTitle
                            </p>
                        </div>

                        <a href="@item.Url" class="item-folio__project-link" title="Project link">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@item.Description</p>
                        </div>

                    </div> <!-- end item-folio -->
                </div>
            }
            <!-- end masonry__brick -->
        </div>
    </div> <!-- end masonry -->
