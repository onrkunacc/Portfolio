@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="MessageId" />

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Messages</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Message Detail</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<b>Sender :  @Model.NameSurname </b>
							<b>
								Email : @Model.Email
							</b>
							<b>
								Tarih : @Model.SendDate
							</b>
							<br />
							<b>
							Message : @Model.MessageDetail
							</b>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
